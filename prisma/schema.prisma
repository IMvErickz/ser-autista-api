// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model News {
  id        String    @id @default(uuid())
  title     String
  content   String
  createdAt DateTime?
  imgUrl    String
  updateAt  DateTime?

  comments Comments[]
}

model Images {
  id  String @id @default(uuid())
  key String
}

model Comments {
  id        String   @id @default(uuid())
  author    String
  content   String
  createdAt DateTime @default(now())
  News      News?    @relation(fields: [newsId], references: [id], onDelete: Cascade)
  newsId    String?
}

model Professionals {
  id      String  @id @default(uuid())
  name    String
  phone   String?
  email   String?
  site    String?
  address String?
}
